{
  "author": "dev.mimir",
  "bugs": "https://github.com/mimir-labs/mimir-wallet/issues",
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/mimir-labs/mimir-wallet/tree/master/packages/polkadot-core#readme",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "directory": "packages/polkadot-core",
    "type": "git",
    "url": "https://github.com/mimir-labs/mimir-wallet.git"
  },
  "sideEffects": true,
  "type": "module",
  "name": "@mimir-wallet/polkadot-core",
  "version": "3.0.0",
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    "./augment": "./augment.d.ts",
    ".": {
      "import": {
        "@mimir-wallet/source": "./src/index.ts",
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    },
    "./simulate": {
      "import": {
        "@mimir-wallet/source": "./src/simulate/index.ts",
        "types": "./build/simulate/index.d.ts",
        "default": "./build/simulate/index.js"
      }
    }
  },
  "files": [
    "build",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.app.json",
    "check-types": "tsc -b --noEmit",
    "dev": "tsc -p tsconfig.app.json --watch",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:cov": "vitest run --coverage",
    "fetch-chain-info": "tsx scripts/fetch-chain-info.ts"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "zustand": ">=5"
  },
  "dependencies": {
    "@acala-network/chopsticks-core": "^1.2.5",
    "@polkadot/api": "^16.5.3",
    "@polkadot/api-augment": "^16.5.3",
    "@polkadot/api-derive": "^16.5.3",
    "@polkadot/apps-config": "^0.169.1",
    "@polkadot/rpc-provider": "^16.5.3",
    "@polkadot/types": "^16.5.3",
    "@polkadot/types-codec": "^16.5.3",
    "@polkadot/types-known": "^16.5.3",
    "@polkadot/ui-shared": "^3.16.4",
    "@polkadot/util": "^13.5.9",
    "@polkadot/util-crypto": "^13.5.9",
    "@polkadot/x-ws": "^13.5.9",
    "diff-match-patch": "^1.0.5",
    "eventemitter3": "^5.0.1",
    "idb": "^8.0.2",
    "jsondiffpatch": "^0.6.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@mimir-wallet/dev": "workspace:^",
    "@mimir-wallet/service": "workspace:^",
    "@polkadot/extension-base": "^0.62.6",
    "@polkadot/extension-inject": "^0.62.6",
    "@types/diff-match-patch": "^1.0.36",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "fake-indexeddb": "^6.2.5",
    "npm-run-all2": "^7.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.14"
  }
}
