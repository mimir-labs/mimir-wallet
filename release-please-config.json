{
  "$schema": "./node_modules/release-please/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "plugins": ["node-workspace"],
  "packages": {
    "app": {
      "always-update": true
    },
    "packages/dev": {
      "skip-github-release": true
    },
    "packages/ui": {
      "skip-github-release": true
    }
  }
}
